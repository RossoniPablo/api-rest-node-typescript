{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./build",
    "rootDir": "./src",

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
